{
  "actions": [
    {
      "id": "consumption_rate",
      "title": {
        "en": "Set the daily consumption rate"
      },
      "titleFormatted": {
        "en": "Set daily consumption rate to [[rate]]"
      },
      "args": [
        {
          "type": "number",
          "name": "rate",
          "min": 0,
          "max": 100,
          "step": 0.1,
          "label": {
            "en": "cm/d"
          },
          "placeholder": {
            "en": "0.5"
          },
          "title": {
            "en": "Daily consumption rate in cm"
          }
        }
      ]
    },
    {
      "id": "depth",
      "title": {
        "en": "Set the current depth in cm"
      },
      "titleFormatted": {
        "en": "Set current depth to [[depth]]"
      },
      "args": [
        {
          "type": "number",
          "name": "depth",
          "min": 0,
          "max": 1000,
          "step": 0.1,
          "label": {
            "en": "cm"
          },
          "placeholder": {
            "en": "0"
          },
          "title": {
            "en": "Water depth in cm"
          }
        }
      ]
    },
    {
      "id": "days_left",
      "title": {
        "en": "Number of days of water left at current consumption rate"
      },
      "titleFormatted": {
        "en": "Set number of days of water left to [[days]]"
      },
      "args": [
        {
          "type": "number",
          "name": "days",
          "min": 0,
          "max": 366,
          "step": 1,
          "label": {
            "en": "days"
          },
          "placeholder": {
            "en": "0"
          },
          "title": {
            "en": "Days of water left"
          }
        }
      ]
    },
    {
      "id": "low_level_alarm",
      "title": {
        "en": "Water low level alarm"
      },
      "titleFormatted": {
        "en": "Set the water low level alarm to [[alarm_setting]]"
      },
      "args": [
        {
          "name": "alarm_setting",
          "type": "dropdown",
          "values": [
            {
              "id": "off",
              "label": {
                "en": "Disarmed"
              }
            },
            {
              "id": "on",
              "label": {
                "en": "Armed"
              }
            }
          ]
        }
      ]
    }
  ]
}
